@model LagerPlayground.Models.Custommer

@{
    ViewData["Title"] = "CheckOut";
}

<h1>Checkout</h1>
<hr />

<div class="checkout-overall-container">
    <div class="checkout-container">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control background-dark" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control background-dark" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="MobileNumber" class="control-label"></label>
                    <input asp-for="MobileNumber" class="form-control background-dark" />
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control background-dark" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control background-dark" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="Zipcode" class="control-label"></label>
                    <input asp-for="Zipcode" class="form-control background-dark" />
                    <span asp-validation-for="Zipcode" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control background-dark" />
                    <span asp-validation-for="City" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control background-dark" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    <input type="submit" value="Køb" class="btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="checkout-container">
        @if (ViewBag.cart != null)
        {
            if (ViewBag.cart.Count != 0)
            {
                @foreach (var item in ViewBag.cart)
                {
                    <div class="checkout-product-container">
                        <div class="checkout-product-image-container">
                            <img src="~/Images/@(item.Product.Image == null ? "Placeholders/Placeholder.jpg" : "Products/" + @item.Product.Image)" />
                        </div>
                        <div class="checkout-product-info-container">
                            <div class="checkout-product-info-name-container">
                                <p>@item.Product.Name</p>
                            </div>
                            <div class="checkout-product-info-quantity-container">
                                <p>@item.Quantity stk.</p>
                            </div>
                        </div>
                        <div class="clearBoth"></div>
                    </div>
                }
            }
            else
            {
                <p>Der er ikke nogen produkter</p>
            }
        }
        else
        {
            <p>Der er ikke nogen produkter</p>
        }

    </div>
    <div class="clearBoth"></div>
</div>

