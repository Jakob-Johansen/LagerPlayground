@model IEnumerable<LagerPlayground.Models.ReceivingOrder_Details>

@{
    ViewData["Title"] = "All Receive Orders";
}

<h2>All Receiving Orders</h2>
<hr />

<table class="table tote-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ReceiveCustommer.CompanyName)*@
                Company Name
            </th>
            <th>Products Ordered</th>
            <th>
                Arrival Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ID)</td>
                <td>@Html.DisplayFor(modelItem => item.ReceiveCustommer.CompanyName)</td>
                <td>
                    @{
                        int productQuantity = 0;
                        foreach (var product in item.receivingOrder_Items)
                        {

                            productQuantity += product.Quantity;
                        }
                        @Html.Raw(productQuantity);
                    }
                </td>
                <td>@item.ArrivalDate.ToShortDateString()</td>
                <td><a asp-action="OrderDetails" asp-route-id="@item.ID">View Details</a></td>
            </tr>
        }
    </tbody>
</table>