@model LagerPlayground.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control background-light" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control background-light"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="BrandName" class="control-label"></label>
                <input asp-for="BrandName" class="form-control background-light" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control background-light" />
                <span asp-validation-for="Category" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" type="number" class="form-control background-light" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <input asp-for="ProductID" class="form-control background-light" />
                <span asp-validation-for="ProductID" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a asp-action="Index">Back to list</a>
</div>

@*-Overlay-*@
<div class="create-overlay-container">
    <div class="create-overlay-modal-container">
        <div class="create-overlay-icon-container">
            <span class="material-icons create-overlay-modal-close-btn">close</span>
        </div>
        <img src="~/Images/4329934.png" class="create-overlay-modal-image" />
        <p>Scan the products barcode</p>
        <input placeholder="0000" class="form-control create-overlay-modal-input background-light inputTest" />
    </div>
</div>


@section Scripts {
    <script src="~/js/ValidateProductBarcode.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}